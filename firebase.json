{
  "database": {
    "rules": {
      "users": {
        ".indexOn": ["teacherCode", "code"],
        ".read": true,
        "$uid": {
          ".write": "$uid === auth.uid"
        }
      },
      "answers": {
        ".read": "auth != null",
        "$uid": {
          ".write": "$uid === auth.uid"
        }
      }
    }
  },
  "hosting": {
    "public": "build",
    "cleanUrls": true,
    "trailingSlash": false,
    "ignore": [
      "firebase.json",
      "**/node_modules/**"
    ]
  }
}
